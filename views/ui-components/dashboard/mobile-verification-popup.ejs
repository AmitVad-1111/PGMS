<!-- mobile no varification popup -->
<div class="bg-gray-700 w-full h-full fixed z-50 top-0 opacity-30 p-0 <% if(isVerificationPending){%>hidden<%}else{%><%}%>" data-model-overlay>
</div>
<div class="fixed z-[51] w-full h-full inset-y-1/3 <% if(isVerificationPending){%>hidden<%}else{%><%}%>" data-model>
  <form method="post" name="mobile-verification-frm" class="bg-white border w-1/4 mx-auto">
    
    <div class="p-5">
      <div class="flex items-center justify-between mt-2">
        <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-200">Verify Mobile no.</h2>
        <div class="cursor-pointer"><img src="/icons/close-icon/close-32.png"></div>
      </div>
      <div class="flex items-center bg-gray-100 border mt-3 hidden" data-verification-state="pending">
        <svg class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" style="background: none; display: block; shape-rendering: auto;" width="200px" height="200px" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid">
          <circle cx="50" cy="50" r="32" stroke-width="8" stroke="#85a2b6" stroke-dasharray="50.26548245743669 50.26548245743669" fill="none" stroke-linecap="round">
            <animateTransform attributeName="transform" type="rotate" repeatCount="indefinite" dur="1s" keyTimes="0;1" values="0 50 50;360 50 50"/>
          </circle>
          <!-- [ldio] generated by https://loading.io/ --></svg>
          <span class="pl-1 text-gray-400 font-bold">Verifying...</span>
      </div>
      <div class="flex items-center bg-green-200 border mt-3 p-1 hidden" data-verification-state="verified">
        <img src="/icons/tick/tick-32.png">
        <span class="pl-1 text-green-700 font-bold">Verified successfully</span>
      </div>
      <div class="flex items-center bg-red-100 border mt-3 p-1 hidden" data-verification-state="error">
          <img src="/icons/error-icon/error-32.png">
          <span class="pl-1 text-red-600 font-bold">Incorrect code</span>
      </div>
      <div class="mt-5">
        <label for="mobile-verification">Enter Verification Code</label>
        <input type="tel" class="border w-full py-2 px-1 text-3xl" name="mobile-verification"
          id="mobile-verification" maxlength="6" value="" />
      </div>
      <div class="flex items-center justify-between mt-5">
        <button data-verifyfrm-submit class="bg-purple-700 px-4 py-3 text-white">Submit</button>
        <a href="#" class="">Resend Verification Code</a>
      </div>
    </div>
  </form>
</div>