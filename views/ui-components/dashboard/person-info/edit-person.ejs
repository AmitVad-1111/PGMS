<main class="h-full overflow-y-auto">
  <div class="container px-6 mx-auto grid">
    <div class="flex items-center justify-between">
      <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
        <% if(pageTitle){%>
          <%= pageTitle %>
        <%}else{%>
          Blank
         <%}%>
      </h2>
    </div>

    <% if(successMsg) {%>
      <div class="bg-green-100 px-3 py-2  mb-5 border border-green-600">
        <span class="text-green-800 font-bold text-sm"><%= successMsg%></span>
      </div>
    <%}%>
    <div data-tabs-container>
      <ul data-tabs class="flex border-b items-center">
        <li data-tabid="#pesonal_info" class="border <%if(currentTab == 'personal'){%>border-b-[3px] border-b-purple-700 bg-white<%}else {%>border-b-0 bg-gray-100<%}%> hover:bg-white p-3 cursor-pointer font-bold">Personal Details</li>
        <li data-tabid="#guardian_info" class="border <%if(currentTab == 'guardian'){%>border-b-[3px] border-b-purple-700 bg-white<%}else {%>border-b-0 bg-gray-100<%}%> hover:bg-white p-3 cursor-pointer font-bold">Guardian/Perent Details</li>
      </ul>
      <div data-tabcontent id="pesonal_info" class="<%if(currentTab != 'personal'){%>hidden<%}%>">
        <%- include("personal.ejs", {isedit:true}) %>
      </div>
      <div data-tabcontent id="guardian_info" class="<%if(currentTab != 'guardian'){%>hidden<%}%>">
        <%- include("parent-guardian.ejs", {isedit:true}) %>
      </div>
    </div>

  </div>
</main>